<!DOCTYPE html>
<html lang="en">
  <%- include('head') %>
  <body>
    <!--Header Section-->
    <%- include('header') %>

    <div class="login--hero">
      <div class="login--hero-container">
        <div class="login--hero-area">
          <div class="login--hero-heading">
            <h3>Login</h3>
          </div>
          <div class="login--hero-input">
            <input
              type="text"
              name="text"
              id="text"
              class="login--hero-username"
              placeholder="Gebruikersnaam"
            />
            <input
              type="password"
              name="password"
              id="password"
              class="login--hero-password"
              placeholder="Wachtwoord"
            />
          </div>
          <div class="login--hero-ctn">
            <input type="submit" value="Login" class="login--hero-btn" />
          </div>
        </div>
      </div>
    </div>

    <!--Footer Section-->
    <%- include('footer') %>
  </body>
</html>
